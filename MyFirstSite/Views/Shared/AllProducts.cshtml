@model Product
    <div class="col-sm-4">
        <img class="img-thumbnail" width="200" height="200" src="@Model.Img" alt="@Model.Name" />
        <h2>@Model.Name</h2>
        <p>@Model.ShortDesc</p>
        <p>Цена: @Model.Price.ToString("c")</p>
        <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.ProductId">Заказать</a></p>
    </div>